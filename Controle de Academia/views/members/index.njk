{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">Adicionar</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Tipo Sanguíneo</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{ member.avatar_url }})"></span>
                        {{member.name}}
                        </td>
                    <td>{{member.blood}}</td>
                    <td>{{member.weight}}Kg</td>
                    <td>{{member.height}}Cm</td>
                    <td><a href="/members/{{member.id}}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}